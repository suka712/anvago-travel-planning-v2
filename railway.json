{
  "$schema": "https://railway.app/railway.schema.json",
  "services": {
    "client": {
      "source": {
        "directory": "packages/client"
      },
      "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "packages/client/Dockerfile"
      }
    },
    "server": {
      "source": {
        "directory": "packages/server"
      },
      "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "packages/server/Dockerfile"
      }
    }
  }
}
